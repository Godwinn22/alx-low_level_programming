int create_file(const char *filename, char *text_content)
{
	FILE *fptr;
	char c = '\0';
	if (filename == NULL || strlen(filename) < 3)
	{
		return (-1);
	}
	else
	{
		fptr = fopen(filename, "w");
		if (!fptr)
		{
			perror("Error opening file\n");
			exit(-1);
		}
		while (*text_content != '\0')
		{
			c = *text_content++;
			fputc(c, fptr);
		}
		fclose(fptr);
		printf("%s created successfully!\n", filename);
		return (0);
	}
}
